---
import { Image } from 'astro:assets';
import logo from "../images/logoB.png"
import {headerData} from "../data/infoData"
import HeaderComponent from "../components/HeaderComponent.astro"

---
<nav class=" pb-12 px-8 navbar">
    <div class="w-full flex flex-wrap items-center justify-between mx-auto p-4">
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
     <Image src={logo} width={60 } height={60} alt="logo"/>
       
      </a>
      <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-12 h-12 justify-center text-sm text-sky-950 rounded-lg md:hidden  hover:scale-105 duration-200 focus:outline-none focus:ring-1 focus:shadow focus:ring-stone-400 " aria-controls="navbar-default" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="w-8 h-8" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
          </svg>
      </button>
      <div class="hidden w-full md:block md:w-auto " id="navbar-default">
        <ul class="font-medium flex flex-col  items-end md:items-start p-4 md:p-0 mt-4 rounded-lg   md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-transparent">
          <li class=" text-center ml-2">

            <a href="/" class="block w-full  text-xl  hover:font-bold  rounded md:bg-transparent md:text-black md:p-0 mt-2"  aria-current="page">Home</a>
          </li>

          {headerData.map(({href,name})=>{
            return(
              <HeaderComponent name={name} href={href}/>
            )
          })}
        
       
        </ul>
      </div>
    </div>
  </nav>



<style is:global>

  .active{
  color:white;
  background-color: black;
  border-radius: 2px;
  box-shadow: 2px 2px 0 #fbbf24;
  font-size: 110%;
  padding: 6px 3px;
  margin-right: 6px;

  }
  