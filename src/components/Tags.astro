const {tags}=Astro.props
interface Props {
 tags:string[]
}

---

<!--tags -->
<div class="flex flex-wrap gap-2  mb-2 mt-8">
    {tags.map((tag: string) => {


      return (



       <a href={'/projects/tag/' + tag}>
   <button type="button">
            <span
                class=" bg-indigo-200 inline-flex text-primary py-[5px] px-2 items-center justify-between  text-sm capitalize border border-1 border-violet-300 rounded-full hover:bg-black hover:text-white mb-2 mr-2">
                <i class= {"bx bxl-" +tag.toLowerCase()} ></i>
                
                    <span  class="capitalize lg:inline leading-5 ml-1">
                    {tag}</span></span>
        </button>
    
        </a> 
      );
    })}
  </div>