---
import { Image } from "astro:assets"
import AboutImg from "../images/1.png"
import MainLayout from "../layouts/MainLayout.astro"
import InfoCard from "../components/InfoCard.astro"
import data from "../data/infoData.js"
---

<MainLayout title="History"
>
<div class="bg-gray-100 p-4">

  <div class="border-1 shadow-lg shadow-gray-700 rounded-lg">

      <!-- top content -->
      <div class="flex flex-col gap-10 sm:gap-4 sm:flex-row  rounded-t-lg bg-gradient-to-bl from-fuchsia-600 to-blue-300 sm:px-2 w-full">
     
                    <div class="relative z-40 top-0 left-0">
                      
                      <div class="relative h-60 w-60 my-6 group mx-2   bg-[#F1F5FD] cursor-pointer ">
                        <Image class="h-auto w-full z-4 relative   " src={AboutImg}  alt="person " width={280} height={300}/>

                      
                  
                        <div class="h-full w-full  border-4 border-white  translate-x-8  flex items-center  z-0 hover:z-100    group-hover:h-60 group-hover:w-2 group-hover:sm:h-62 group-hover:sm:w-2  group-hover:border-none  transition-all duration-300 ease-in-out bg-transparent absolute top-0 right-8 transform ">
                          <div class="w-8 h-8  absolute top-0  rounded-full group-hover:opacity-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="animate-bounce" style="fill: rgba(207, 7, 38, 1);transform: ;msFilter:;"><path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z"></path><path d="M11 11h2v6h-2zm0-4h2v2h-2z"></path></svg>
                          </div>
                        <div class=" w-30 h-full p-4 shadow-md bg-slate-50 rounded-br-full rounded-tr-full   ml-4 rotate-40 gap-2 my-auto transition-all group-hover:duration-300  group-hover:delay-200 group-hover:ease-in-out  opacity-0 group-hover:top-0 group-hover:opacity-100  hover:delay-0 hover:duration-0 cursor-pointer">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            class=" hover:fill-fuchsia-600 fill-black transition-none min-h-[32px] min-w-[26px] sm:min-h-[42px] sm:min-w-[32px]"
                          >
                            <path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77Z" />
                          </svg>
                        
                        
                        
                          <div class="  transition-all duration-300 group-hover:delay-200 ease-in-out  hover:delay-0 hover:duration-0 cursor-pointer   opacity-0 group-hover:opacity-100">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="6"
                            height="6"
                            viewBox="0 0 16 16"
                            class="min-h-[32px] min-w-[26px] sm:min-h-[42px] sm:min-w-[32px] hover:fill-fuchsia-400 fill-black"
                          >
                            <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334c0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518a3.301 3.301 0 0 0 1.447-1.817a6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429a3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218a3.203 3.203 0 0 1-.865.115a3.23 3.23 0 0 1-.614-.057a3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
                          </svg>
                        </div>
                        <div class=" transition-all duration-300 group-hover:delay-100 ease-in-out  opacity-0 group-hover:opacity-100  hover:delay-0 hover:duration-0 cursor-pointer">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            class="min-h-[32px] min-w-[26px] sm:min-h-[42px] sm:min-w-[32px] hover:fill-fuchsia-600 fill-black"
                          >
                            <path d="M12 2.04c-5.5 0-10 4.49-10 10.02c0 5 3.66 9.15 8.44 9.9v-7H7.9v-2.9h2.54V9.85c0-2.51 1.49-3.89 3.78-3.89c1.09 0 2.23.19 2.23.19v2.47h-1.26c-1.24 0-1.63.77-1.63 1.56v1.88h2.78l-.45 2.9h-2.33v7a10 10 0 0 0 8.44-9.9c0-5.53-4.5-10.02-10-10.02Z" />
                          </svg>
                        </div>
                       
                        <div class=" opacity-0 group-hover:opacity-100   transition-all hover:delay-0 hover:duration-0 duration-300 group-hover:delay-200 ease-in-out   cursor-pointer ">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 20 20"
                            class="min-h-[32px] min-w-[26px] sm:min-h-[42px] sm:min-w-[32px] hover:fill-fuchsia-600 fill-black"
                          >
                            <path
                              fill-rule="evenodd"
                              d="m7.172 11.334l2.83 1.935l2.728-1.882l6.115 6.033c-.161.052-.333.08-.512.08H1.667c-.22 0-.43-.043-.623-.12l6.128-6.046ZM20 6.376v9.457c0 .247-.054.481-.15.692l-5.994-5.914L20 6.376ZM0 6.429l6.042 4.132l-5.936 5.858A1.663 1.663 0 0 1 0 15.833V6.43ZM18.333 2.5c.92 0 1.667.746 1.667 1.667v.586L9.998 11.648L0 4.81v-.643C0 3.247.746 2.5 1.667 2.5h16.666Z"
                            />
                          </svg>
                        </div>
                        <div class=" opacity-0 group-hover:opacity-100   absolute hover:delay-0 hover:duration-0 transition-all duration-300 group-hover:delay-200 ease-in-out  cursor-pointer">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 16 16"
                            class="min-h-[30px] min-w-[26px] sm:min-h-[42px] sm:min-w-[32px] hover:fill-fuchsia-600 fill-black "
                          >
                            <path
                              fill-rule="evenodd"
                              d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42a18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"
                            />
                          </svg>
                        </div>
                      </div>
                    </div>
                      </div>
                      </div>
                    
                   

          <div class=" w-full md:w-2/3 text-white sm:text-center pl-5 mt-10 text-start  flex flex-col items-center justify-center">
              <p class=" font-bold text-heading text-7xl">
                  Judit Szabo
              </p>
              <p class="text-heading text-3xl mt-2">Full Stack Developer</p>
          </div>

      </div>

      <!-- main content -->
      <div class="p-5">

          <div class="flex flex-col sm:flex-row sm:mt-10 gap-4 ">

              <div class="flex flex-col sm:w-1/3  gap-8 ">
                  <!-- My contact -->
                  <div class="py-3  sm:order-none order-3  bg-white border-2 rounded-xl shadow-md ">
                    <div class=" py-2 w-full pb-4 ">
                      <h2 class=" pl-2 text-lg font-poppins font-bold text-top-color before:content-['•'] before:mr-1  before:text-fuchsia-500 before:text-2xl">About Me</h2>
                    </div>

                      <div class="bg-slate-100 mx-2 p-2  rounded-xl mb-4 ">
                         
                         
                        
                        <div class="w-full px-2 flex flex-col justify-center gap-3 pb-4  ">
      
  
                          <p class="font-semibold pt-4 whitespace-normal text-justify text-base">
                            <span class="italic font-bold  ">
                            
                              With just 2 years of learning
                            </span>
                            - while creating experience I got involved in more than 8
                            programmming languages, and continuesly evolving toward better user
                            experience.
                          </p>
                          <p class="text-black opacity-80 text-justify font-medium whitespace-normal ">
                            A certified post gratuade fullstack developer with UI/UX design
                            interest, my passion is to create websites and fully functioning web
                            and mobile applications.
                          </p>
                         

                    </div>

                      </div>
                  </div>
                  <!-- Info -->
                  <div class="py-3  sm:order-none order-3  bg-white border-2 rounded-xl shadow-md ">
                    <div class=" py-2 w-full pb-4 ">
                      <h2 class=" pl-2 text-lg font-poppins font-bold text-top-color before:content-['•'] before:mr-1  before:text-fuchsia-500 before:text-2xl">Information</h2>
                    </div>

                      <div class="bg-slate-100 mx-2 p-2  rounded-xl mb-4 pb-4 ">
                        {data.map(({title,name,index})=>{
                          return(<InfoCard title={title}
                          name={name} index={index}/>)
                        })}
                         
                      

                        
                        
                     

                      </div>
                  </div>
              

              </div>


              <div class="flex flex-col sm:w-2/3 order-first sm:order-none sm:-mt-10">

                  <!-- Tab bar -->
                  <div class="py-3 bg-white shadow-2xl rounded-md w-full justify-between">
                    <button type="button" class="text-black  bg-slate-200 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Education</button>
                    <button type="button" class="text-black  bg-slate-200 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Education</button>
                    <button type="button" class="text-black  bg-slate-200 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Education</button>
                    
                      
                  </div>

                  <!-- Professional Experience -->
                  <div class="py-3">
                      <h2 class="text-lg font-poppins font-bold text-top-color">Professional Experience</h2>
                      <div class="border-2 w-20 border-top-color my-3"></div>

                      <div class="flex flex-col">

                          <div class="flex flex-col">
                              <p class="text-lg font-bold text-gray-700">Netcracker Technology | Software Engineer</p>
                              <p class="font-semibold text-sm text-gray-700">2021 - Present</p>
                              <p class="font-semibold text-sm text-gray-700 mt-2 mb-1">Key Responsibilities</p>
                              <ul class="text-sm list-disc pl-4 space-y-1">
                                  <li>Working on customer facing product</li>
                                  <li>Deliverying highly efficient solutions</li>
                                  <li>Solving critical bugs</li>
                              </ul>
                          </div>

                          <div class="flex flex-col mt-8">
                              <p class="text-lg font-bold text-gray-700">TailwindFlex.com | Lead</p>
                              <p class="font-semibold text-sm text-gray-700">2020-2021</p>
                              <p class="font-semibold text-sm text-gray-700 mt-2 mb-1">Key Responsibilities</p>
                              <ul class="text-sm list-disc pl-4 space-y-1">
                                  <li>Developed usable components</li>
                                  <li>Solving complex problems</li>
                                  <li>Solving critical bugs</li>
                              </ul>
                          </div>

                      </div>

                  </div>

                  <!-- Projects -->
                  <div class="py-3">
                      <h2 class="text-lg font-poppins font-bold text-top-color">Projects</h2>
                      <div class="border-2 w-20 border-top-color my-3"></div>

                      <div class="flex flex-col">

                          <div class="flex flex-col">
                              <p class="text-lg font-semibold text-gray-700">Used Books mobile app</p>
                              <p class="font-normal text-sm text-gray-700 mb-1 pl-2">A platform to sell as well as to
                                  buy used books only for PCCoE College due to this reuse of books will be there
                                  beneficial for environment also indirectly helps increase communication between
                                  juniors and seniors.</p>
                          </div>
                          <div class="flex flex-col">
                              <p class="text-lg font-semibold text-gray-700">Parking Automation System</p>
                              <p class="font-normal text-sm text-gray-700 mb-1 pl-2">it’s a web application which
                                  helps you to book your slot for your car just like booking a movie ticket from home.
                              </p>
                          </div>

                      </div>

                  </div>

              </div>
          </div>

      </div>

  </div>

</div>
    
      
       
       
    
       
    
      
    
       
    
        
      </main>
</MainLayout>
